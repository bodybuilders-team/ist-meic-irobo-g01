<launch>
  <!-- Arguments -->
  <arg name="model" default="waffle_pi" />
  <arg name="bag_name" default="filtered_slam_easy" />
  <arg name="map_file" default="$(find ist-meic-irobo-g01)/maps/map.yaml" />

  <!-- Turtlebot3 -->
  <include
    file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- Rosbag -->
  <param name="/use_sim_time" value="true" />
  <node pkg="rosbag" type="play" name="rosbag_player"
    args="--clock $(find ist-meic-irobo-g01)/data/$(arg bag_name).bag" />

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)" />

  <!-- ekf_localization_node -->
<node pkg="robot_localization" type="ekf_node" name="robot_localization_ekf_node_odom" args="$(find ist-meic-irobo-g01)/params/ekf.yaml"/>
  <!-- rviz -->
  <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find ist-meic-irobo-g01)/rviz/localization_provided_dataset.rviz"/>
  <!-- <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find turtlebot3_navigation)/rviz/turtlebot3_navigation.rviz"/> -->

  <!-- tf2 -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="tf2_map2odom" required="true"
  args="0 0 0 0 0 0 map odom"/>
  <node pkg="tf2_ros" type="static_transform_publisher" name="tf2_mocap2odom" args="0.935 1.34 -0.023 0.001 -0.003 0.737 0.676 mocap map"/>

        "-d $(find turtlebot3_navigation)/rviz/turtlebot3_navigation.rviz" 

</launch>